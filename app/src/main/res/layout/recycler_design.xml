<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/recycler_designing"
    android:layout_marginTop="10dp"

    >
<androidx.cardview.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="100dp"
  app:cardBackgroundColor="@color/white"
android:layout_marginLeft="5dp"
    android:id="@+id/cardview_recyclerOne"
    app:cardElevation="19dp"
    >
    <ImageView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/image_recyclerOne"
android:layout_marginTop="5dp"
        />
    <TextView
        android:id="@+id/txt_recyclerOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FootBall"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"

        />

</androidx.cardview.widget.CardView>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/recycler_designing2"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center"
            app:cardElevation="19dp"
          app:cardBackgroundColor="@color/white"
            android:id="@+id/cardview_recyclerTwo"
            >
            <ImageView
                android:id="@+id/image_recyclerTwo"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"

                />

            <TextView
                android:id="@+id/txt_recyclerTwo"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="Paris Saint-Germain"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"

                android:layout_gravity="center"

                />

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>